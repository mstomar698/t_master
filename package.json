{
  "name": "t_master",
  "version": "1.0.3",
  "description": "Get all basic necessities in sinle CLI tool",
  "scripts": {
    "dev": "tsx watch ./src/main.ts",
    "start": "node ./build/main.js",
    "build": "tsup ./src/main.ts",
    "test:tsc": "tsc --project tsconfig.json",
    "lint:code": "eslint --max-warnings 0 src/**/*.ts",
    "lint:style": "prettier --check --ignore-path .gitignore .",
    "format": "prettier --write --ignore-path .gitignore .",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mstomar698/tm.git"
  },
  "keywords": [
    "CLI Tool",
    "Templates",
    "Accessory Tool"
  ],
  "author": "mstomar698 (tomarm698@gmail.com)",
  "license": "MIT",
  "type": "module",
  "bin": {
    "t_master": "./build/main.js"
  },
  "files": [
    "build/"
  ],
  "engines": {
    "node": ">= 14"
  },
  "dependencies": {
    "arg": "5.0.2",
    "boxen": "7.0.0",
    "chalk": "5.0.1",
    "chalk-template": "0.4.0",
    "shelljs": "0.8.5",
    "update-check": "1.5.4"
  },
  "devDependencies": {
    "@types/compression": "1.7.2",
    "@types/shelljs": "0.8.11",
    "@vercel/style-guide": "3.0.0",
    "c8": "7.12.0",
    "eslint": "8.19.0",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "tsup": "6.1.3",
    "tsx": "3.7.1",
    "typescript": "4.6.4"
  },
  "bugs": {
    "url": "https://github.com/mstomar698/tm/issues"
  },
  "tsup": {
    "target": "esnext",
    "format": [
      "esm"
    ],
    "outDir": "./build/"
  },
  "prettier": "@vercel/style-guide/prettier",
  "eslintConfig": {
    "extends": [
      "./node_modules/@vercel/style-guide/eslint/node.js",
      "./node_modules/@vercel/style-guide/eslint/typescript.js"
    ],
    "parserOptions": {
      "project": "tsconfig.json"
    }
  },
  "lint-staged": {
    "*": [
      "prettier --ignore-unknown --write"
    ],
    "source/**/*.ts": [
      "eslint --max-warnings 0 --fix"
    ]
  },
  "homepage": "https://github.com/mstomar698/tm#readme"
}
